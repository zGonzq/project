---
import SectionTitle from './SectionTitle.astro';
import { AnimatedCard } from '../ui/AnimatedCard';

const certifications = [
    {
        provider: "Cisco",
        logo: "/logos/cisco.svg",
        title: "IT Essentials",
        date: "2023",
        providerName: "Cisco Networking Academy"
    },
    {
        provider: "IP Santo Tomás",
        logo: "/logos/st.webp",
        title: "Diseño Básico de Software",
        date: "2023",
        providerName: "Universidad Santo Tomás"
    },
    {
        provider: "IP Santo Tomás",
        logo: "/logos/st.webp",
        title: "Programación Básica",
        date: "2023",
        providerName: "Universidad Santo Tomás"
    },
    {
        provider: "IP Santo Tomás",
        logo: "/logos/st.webp",
        title: "Soporte Informático",
        date: "2023",
        providerName: "Universidad Santo Tomás"
    },
    
];
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <SectionTitle title="Certificaciones" icon="/icons/titles/certificate.svg" />
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {certifications.map((cert) => (
        <AnimatedCard client:visible className="group bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="flex items-center gap-4">
            <div class="w-16 h-16 flex items-center justify-center bg-gray-100 dark:bg-gray-700 rounded-xl group-hover:scale-110 transition-transform">
              <img src={cert.logo} alt={cert.provider} class="w-12 h-12" />
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900 dark:text-white">{cert.title}</h3>
              <p class="text-gray-600 dark:text-gray-300">{cert.providerName}</p>
              <span class="inline-block px-3 py-1 mt-2 text-sm text-primary bg-primary/10 rounded-full">
                {cert.date}
              </span>
            </div>
          </div>
        </AnimatedCard>
      ))}
    </div>
  </div>
</section>