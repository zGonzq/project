---
import SectionTitle from './SectionTitle.astro';
import { AnimatedCard } from '../ui/AnimatedCard';

const education = [
    {
        institution: "Universidad Santo Tomás",
        logo: "/logos/st.webp",
        career: "Analista Programador",
        startDate: "2023",
        endDate: "Presente",
    },
    {
        institution: "Complejo Educacional Monseñor Guillermo Hartl",
        logo: "/logos/hartl.webp",
        career: "Gráfica",
        startDate: "2021",
        endDate: "2022",
    },
];
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <SectionTitle title="Formación Académica" icon="/icons/titles/education.svg" />
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {education.map((edu) => (
        <div class="flex gap-4 p-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition-all">
          <div class="relative flex h-10 w-10 flex-none items-center justify-center rounded-lg shadow-sm  dark:ring-0">
            <img loading="lazy" src={edu.logo} alt={edu.institution} class="w-12 rounded-md object-cover" />
          </div>
          <div class="flex flex-col gap-y-1">
            <div class="text-base font-semibold tracking-tight text-gray-900 dark:text-white">{edu.career}</div>
            <div class="text-pretty text-sm text-gray-900 dark:text-gray-400 font-medium">
              <p>{edu.institution}</p>
            </div>
            <div class="flex">
            <span class="inline-block px-2 py-0.5 mt-1 text-sm text-primary bg-primary/10 rounded-full">{edu.startDate} - {edu.endDate}</span>
          </div>
          </div>
        </div>
      ))}
  </div>
</section>