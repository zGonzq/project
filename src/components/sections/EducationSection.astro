---
import SectionTitle from './SectionTitle.astro';
import { AnimatedCard } from '../ui/AnimatedCard';

const education = [
    {
        institution: "Universidad Santo Tomás",
        logo: "/logos/st.webp",
        career: "Analista Programador",
        startDate: "2023",
        endDate: "Presente",
    },
    {
        institution: "Complejo Educacional Monseñor Guillermo Hartl",
        logo: "/logos/hartl.webp",
        career: "Gráfica",
        startDate: "2021",
        endDate: "2022",
    },
];
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <SectionTitle title="Formación Académica" icon="/icons/titles/education.svg" />
    <div class="max-w-3xl mx-auto space-y-12">
      {education.map((edu) => (
        <AnimatedCard client:visible className="group bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow mb-6">
          <div class="flex items-center gap-6">
            <div class="w-20 h-20 flex items-center justify-center bg-gray-100 dark:bg-gray-700 rounded-xl group-hover:scale-110 transition-transform">
              <img src={edu.logo} alt={edu.institution} class="w-16 h-16 object-contain" />
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">{edu.career}</h3>
              <p class="text-gray-700 dark:text-gray-400 mb-2">{edu.institution}</p>
              <span class="inline-block px-3 py-1 text-sm text-primary bg-primary/10 rounded-full">
                {edu.startDate} - {edu.endDate}
              </span>
            </div>
          </div>
        </AnimatedCard>
      ))}
    </div>
  </div>
</section>