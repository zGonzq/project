---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import  SpeedInsights  from "@vercel/speed-insights/astro"
import Analytics from '@vercel/analytics/astro'
import Footer from '../components/Footer.astro';
import {FloatingNav} from '../components/ui/floating-navbar';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Gonzalo Leal - Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script>
      function initTheme() {
        if (
          localStorage.getItem('color-theme') === 'dark' ||
          (!localStorage.getItem('color-theme') &&
            window.matchMedia('(prefers-color-scheme: dark)').matches)
        ) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      }

      // Run on initial load
      initTheme();

      // Re-run on view transitions
      document.addEventListener('astro:after-swap', initTheme);
    </script>
        <Analytics/>
        <SpeedInsights/>
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors">
    <FloatingNav client:load />
    <main class="container mx-auto px-4 pt-24 min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>

